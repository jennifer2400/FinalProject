<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainPage</servlet-name>
        <servlet-class>sv.edu.udb.servlets.MainPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrearUserServlet</servlet-name>
        <servlet-class>sv.edu.udb.controlador.CrearUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>sv.edu.udb.controlador.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultasSqlServlet</servlet-name>
        <servlet-class>sv.edu.udb.controlador.ConsultasSqlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecuperarPasswordServlet</servlet-name>
        <servlet-class>sv.edu.udb.controlador.RecuperarPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrearUsuarioServlet</servlet-name>
        <servlet-class>sv.edu.udb.controlador.CrearUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarMaterialServlet</servlet-name>
        <servlet-class>sv.edu.udb.controlador.AgregarMaterialServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainPage</servlet-name>
        <url-pattern>/MainPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrearUserServlet</servlet-name>
        <url-pattern>/CrearUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultasSqlServlet</servlet-name>
        <url-pattern>/ConsultasSqlServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecuperarPasswordServlet</servlet-name>
        <url-pattern>/RecuperarPasswordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrearUsuarioServlet</servlet-name>
        <url-pattern>/CrearUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarMaterialServlet</servlet-name>
        <url-pattern>/AgregarMaterialServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
